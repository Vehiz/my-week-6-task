<!DOCTYPE html>
<html lang="en">
    <%-include('./partials/head.ejs') %>
    <title>Movie-Land By VictorEhiz</title>
<body>
   
  <%- include('./partials/navbar.ejs') %>
  <div class="container-fluid">
      <div class="col text-center py-3">
        <h1>Sign Up</h1>
      </div>
      <div class="row g-6">
        <div class="col-6 offset-3 border-secondary shadow py-3 px-5 rounded">
          <form class="form_container" method="post" action="/users/signup" enctype="application/x-www-form-urlencoded">
            <div class="form-group mb-1">
              <label for="colFormLabel" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="colFormLabel" placeholder="fullname" name="fullname">
              </div>
            </div>
            <div class="form-group mb-1">
              <label for="colFormLabel" class="form-label"></label>
              <div class="">
                <input type="text" class="form-control" id="colFormLabel" placeholder="username" name="username">
              </div>
            </div>
            <div class="form-group mb-1">
              <label for="colFormLabel" class="form-label"></label>
              <div class="">
                <input type="email" class="form-control" id="colFormLabel" placeholder="email" name="email">
              </div>
            </div>
            
            <div class=" form-group mb-1">
              <label for="password" class="form-label"></label>
              <div class="">
                <input type="password" class="form-control" id="password" placeholder="Password" name="password">
              </div>
            </div>
            <div class="form-group mb-5">
              <label for="confirm_password" class="form-label"></label>
              <div class="">
                <input type="password" class="form-control" id="repeat_password" placeholder="Confirm Password" name="repeat_password">
              </div>
            </div>
            <div class="form-group mb-3">
              <div class="text-center">
                <input type="submit" class="btn btn-primary" id="submit" value="Signup" >
              </div>
            </div>
          </form>
        </div>
      </div>
  </div>
  <%- include('./partials/footer.ejs') %>

</body>
</html>